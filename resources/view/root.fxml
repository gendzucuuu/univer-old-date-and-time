      <Label fx:id="dateField" layoutX="303.0" layoutY="209.0" prefHeight="44.0" prefWidth="159.0" text="Label" wrapText="true" />
      <Label fx:id="timeZoneField" layoutX="126.0" layoutY="325.0" prefHeight="33.0" prefWidth="332.0" />
      <Label layoutX="315.0" layoutY="26.0" prefHeight="67.0" prefWidth="347.0" text="Date and time">
         <font>
            <Font name="Footlight MT Light" size="47.0" />
         </font>
      </Label>
      <Label fx:id="timeZoneLabel" layoutX="126.0" layoutY="302.0" prefHeight="33.0" prefWidth="159.0" text="Time Zone:" />
      <Label fx:id="dateLabel" layoutX="303.0" layoutY="184.0" prefHeight="33.0" prefWidth="159.0" text="Date:" />
      <Label fx:id="timeLabel" layoutX="303.0" layoutY="113.0" prefHeight="33.0" prefWidth="159.0" text="Time:" />
   </children>
