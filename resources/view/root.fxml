                  <Line fx:id="secondHand" endY="-88.0" startY="15.0" stroke="#da1313" strokeLineJoin="ROUND" strokeWidth="2.0" />
                  <Circle fx:id="spindle" fill="#0a1825" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
               </children>
            </Group>
         </children></AnchorPane>
      <Button fx:id="changeTimeButton" focusTraversable="false" layoutX="472.0" layoutY="119.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="190.0" text="CHANGE TIME" />
