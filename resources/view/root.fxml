   <children>
      <AnchorPane layoutX="8.0" layoutY="7.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <Group fx:id="analogueClock" layoutX="135.0" layoutY="146.0">
               <children>
                  <Circle fx:id="face" fill="DODGERBLUE" radius="100.0" stroke="BLACK" strokeType="INSIDE" style="-fx-fill: radial-gradient(radius 180%, burlywood, derive(burlywood, -30%), derive(burlywood, 30%)); -fx-effect: dropshadow(three-pass-box, grey, 10, 0, 4, 4);" />
